<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %> </h1>
    <form method="POST" class="default-form" >
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" placeholder="Ingresa el nombre del grupo" value="<%= grupo.nombre %> ">
        </div>
        <div class="campo descripcion">
            <label for="descripcion">Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion" value="<%= grupo.descripcion %>">    
                <trix-editor input="x"></trix-editor> 
            </div>
        </div>
        <div class="campo">
            <label for="categoria">Categoria</label>
            <select name="categoriaId">
                <option disabled selected>--Elige una categoría--</option>
                <% categorias.forEach(categoria =>{ %>
                    <option value="<%= categoria.id %>"
                        <%= (grupo.categoriaId === categoria.id) ? 'selected' : '' %> > 
                        <%= categoria.nombre %> 
                    </option>
                <% }) %> 
            </select>
        </div>
        <div class="campo">
            <label for="url">Sitio Web</label>
            <input type="url" name="url" placeholder="Dirección del Sitio Web" value="<%= grupo.url %> ">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Guardar Cambios" class="btn btn-rosa">
        </div>
    </form>
</main>